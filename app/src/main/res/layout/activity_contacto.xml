<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacto">

    // para deslizar en la pantalla



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteX="dp"
        tools:layout_editor_absoluteY="dp"
        tools:ignore="MissingConstraints"> //deSplazar de izquierda a derecha



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="ExtraText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="168dp"
                    android:layout_height="66dp"
                    app:layout_constraintEnd_toStartOf="@+id/btnini3"
                    app:layout_constraintHorizontal_bias="0.039"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/twopctyech"
                    tools:layout_editor_absoluteY="7dp" />

                <Button
                    android:id="@+id/btnini3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#BF3F3F"
                    android:text="Inicio"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="7dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView2contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Contacto"
                android:textSize="40sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Comunicacte con nosotros, te daremos respuesta lo antes posible"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2contacto"
                tools:layout_editor_absoluteX="5dp" />

            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/telefono" />


            <Button
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:backgroundTint="#1E8508"
                android:contentDescription="whast"
                android:text="Whatsapp"
                android:textSize="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="63dp" />

            <Button
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#28487E"
                android:contentDescription="whast"

                android:text="Facebook"
                android:textSize="40dp"
                app:layout_constraintBottom_toTopOf="@+id/whatsapp"
                tools:layout_editor_absoluteX="5dp" />

            <Button
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#9E1548"
                android:contentDescription="whast"
                android:text="Instagram"
                android:textSize="40dp"
                app:layout_constraintBottom_toTopOf="@+id/facebook"
                tools:layout_editor_absoluteX="0dp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Con nuestra nueva implementacion puedes enviarnos un correo de forma rapida y certera para que nos podamos comunicar contigo."
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2contacto"
                tools:layout_editor_absoluteX="5dp" />






            <EditText
                android:layout_marginTop="40dp"
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Asunto" />

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Mensaje" />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#9db847"
                android:text="Enviar mensaje" />



            <Button
                android:id="@+id/buttoncontacto2"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#BF3F3F"
                android:text="Inicio"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="7dp" />


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>